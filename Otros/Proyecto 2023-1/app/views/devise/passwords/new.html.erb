<div class = "form-container">
  <div class = "inner-form-container">
    <h2 style = "margin-bottom:1rem">¿Se te olvidó tu contraseña?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Correo electronico", class: "field-item"%>
  </div>

  <div class="actions" style = "margin-bottom: 1rem">
    <%= f.submit "Enviar instrucciones" , class: "ingresar-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
