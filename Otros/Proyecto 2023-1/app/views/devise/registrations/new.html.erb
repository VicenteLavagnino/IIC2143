<div class = "form-container">
  <div class = "inner-form-container">
    <h2 style = "margin-bottom:1rem">Ingresa</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.text_field :name, placeholder: "Nombre", class: "field-item" %>
      </div>
      
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Correo electronico", class: "field-item" %>
      </div>

      <div class="field">
        <% if @minimum_password_length %>
        <em style = "color: #adadad;">(<%= @minimum_password_length %> caracteres mínimo)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Contraseña", class: "field-item" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new_password", placeholder: "Repetir contraseña", class: "field-item" %>
      </div>

      <div class="ingresar-btn" style="margin-bottom: 1rem">
        <%= f.submit "Registrarme", class: "ingresar-btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>