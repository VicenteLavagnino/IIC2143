<div class = "form-container">
  <div class = "inner-form-container">
    <h2 style = "margin-bottom:1rem">Ingresa</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field-item"  %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", class: "field-item"  %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions" class="ingresar-btn" style="margin-bottom: 1rem">
        <%= f.submit "Ingresar", class: "ingresar-btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>