<div style = "reviews-table" style = "display: flex; justify-content: center; width: 100%">

 <div style = "display: flex; justify-content: center; width: 100%; margin: 1rem">
  <h1>Mis compras</h1>
</div>

<div id="requests" style = "display: flex; aling-items: center; flex-direction: column">
   <div class = "review-table-header">
          <div class = "review-table-header-item">
            <h4>User id</h4>
          </div>
          <div class = "review-table-header-item">
            <h4>Product id</h4>
          </div>
          <div class = "review-table-header-item">
            <h4>Cantidad</h4>
          </div>
          <div class = "review-table-header-item">
            <h4>Link</h4>
          </div>
        </div>
  <% @requests.each do |request| %>
    <!-- <% if request.user_id == current_user.id %>-->
    <div class = "review-table-container">
      <%= render request %>
      <div class = "product-table-value-item-container">
        <%= link_to "Show this request", request, class: "product-table-value-item-btn" %>
      </div>
    </div>
    <!-- <% end %> -->
  <% end %>
</div>
</div>