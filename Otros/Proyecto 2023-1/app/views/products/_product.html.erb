<div class = "item-producto-info-container">
  <div id="<%= dom_id product %>" class = "item-producto-info">
      <div class = "item-producto-info-text" style = "margin-top: 2rem">
        <div style = "display: flex; flex-direction: row">
          <div style = "border: none">
             <%= image_tag(product.image, size: "250x250",style: "border: none; border-radius: 10px")%>
          </div>
          <div style = "display: flex; flex-direction: column; margin-left: 3rem">
            <div>
              <h4 style = "font-size: 20px; font-weight: bold">
                <%= product.name %>
              </h4>
            </div>
            <div>
              <h4>
              <%= product.price %>
              </h4>
            </div>
            <div>
              <h4>
                <%= product.description %>
              </h4>
            </div>
            <div>
              <h4>
                  <%= product.id %>
              </h4>
            </div>
            <% if user_signed_in? %>
              <div>
                <form method = "POST" action = "/requests/create" enctype = "multipart/form-data">
                  <%= hidden_field_tag :product_id, @product.id%>
                  <%= token_tag nil %>
                  <div style = "align-items: center; display:flex; flex-direction: column;">
                    <div class = "review-container-input">
                      <input class = "input-review" type = "number" id = "quantity" name = "request[quantity]" min = "1" max = "100" step = "1"  value = "1" placeholder = "1" > 
                    </div>
                    <div>
                      <button class = "product-table-value-item-btn"> Añadir al carro </button>
                    </div>
                  </div>
                </form>
              </div>
              <div>
                <form method = "POST" action = "/reviews/create" enctype = "multipart/form-data">
                  <%= hidden_field_tag :product_id, @product.id%>
                  <%= token_tag nil %>
                  <div style = "align-items: center; display:flex; flex-direction: column;">
                    <div class = "review-container-input">
                      <h3 style = "margin-bottom: 1rem">Dale un rating al producto (1-5)</h2>
                      <input class = "input-review" type = "number" id = "rate" name = "review[rate]" min = "1" max = "5" step = "1"  value = "1" placeholder = "1" > 
                    </div>
                    <div class = "review-container-input">
                      <input class = "input-text-review" type = "text" id = "comment" name = "review[comment]" placeholder = "Ingresa tu reseña" > 
                    </div>
                    <div>
                      <button class = "product-table-value-item-btn"> Crear Reseña </button>
                    </div>
                  </div>
                </form>
              </div>      
            <%end%>
          </div>
      </div>
    </div>
  </div>
</div>