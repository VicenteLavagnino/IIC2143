<!DOCTYPE html>
<html>

<head>
  <title>Grupo47</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>

<body>

  <nav class="navbar is-danger" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
      <a class="navbar-item" href="/">
        <%= image_tag('logoynombre.png', width: 112, height: 28, alt: 'Logo y nombre') %>
      </a>

      <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
    </div>

    <div id="navbarBasicExample" class="navbar-menu">
      <div class="navbar-start">
        <a class="navbar-item">
          Inicio
        </a>

        <a class="navbar-item">
          Explora
        </a>

        <div class="navbar-item has-dropdown is-hoverable">
          <a class="navbar-link">
            Más
          </a>

          <div class="navbar-dropdown">
            <a class="navbar-item">
              Nosotros
            </a>
            <a class="navbar-item">
              Trabaja aquí
            </a>
            <a class="navbar-item">
              Contact
            </a>
            <hr class="navbar-divider">
            <a class="navbar-item">
              Reporta un problema
            </a>
          </div>
        </div>
      </div>
      <div class="navbar-end custom-navbar-end">
        <% if user_signed_in? %>
          <div class="navbar-item has-dropdown is-hoverable">
            <a class="navbar-link">
              <%= image_tag('default_profile_icon.png', width: 30, height: 30, alt: 'Icono perfil', class: 'profile-icon') %>
              Perfíl
            </a>

            <div class="navbar-dropdown">
              <a class="navbar-item" href="<%= edit_user_registration_path %>">
                  Editar
              </a>
              <hr class="navbar-divider">
              <a class="navbar-item">
                <%= button_to "Salir", destroy_user_session_path, method: :delete, class: "button-as-link" %>
              </a>
            </div>
          </div>
        <% else %>
          <div class="navbar-item">
            <%= link_to "Ingresar", new_user_session_path, class: "button is-light" %>
          </div>
          <div class="navbar-item">
            <%= link_to "Registrarse", new_user_registration_path, class: "button is-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </nav>

  <% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
  <% end %>

  <% if flash[:alert] %>
    <p class="alert"><%= flash[:alert] %></p>
  <% end %>

  <%= yield %>

</body>

</html>
